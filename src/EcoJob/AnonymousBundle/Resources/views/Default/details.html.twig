<div class="latest_news">
    <div class="txt1">Ajoutée le {{offre.createdAt | date('d-m-y')}}</div>
    <div class="title7">Offre numero {{offre.id}}</div>
    <div class="news1">
        <div class="txt2"><a href="#">{{offre.titre}}</a></div>
        <div class="txt3">{{offre.description}}</div>  
        <div class="txt3">{{offre.localisation}}</div>  
        {% if not app.user %}
            <a href="#" class="btn-default btn1" data-toggle="modal" data-target="#globModal">Save</a>
            <a href="#" class="btn-default btn1" data-toggle="modal" data-target="#globModal">Postuler</a>
            <a href="{{ path('eco_job_anonymous_offre_integralite',{ 'id': offre.id,'localisation': offre.localisation }) }}" target="_blank" class="btn-default btn1">Voir</a>
        {% else %}
            {% if is_granted('ROLE_CANDIDAT') %}
                {% if offre.added %}
                    <a href="#" class="btn-default btn-warning">Déja sauvegardée</a>
                {% else %}
                    {#<a href="{{ path('eco_job_candidat_offre_save',{'id': offre.id})}}" class="btn-default btn1">Save</a>#}
                    <a class="cd-add-to-cart btn btn-default btn1" data-offre-id="{{ offre.id }}">
                        Save
                    </a>
                {% endif %}
                {% if postuled %}
                    <a href="#" class="btn-default btn-warning">Déja postulé</a>
                {% else %}
                    <button class="btn-default btn1" id="postulerBtn" type="button" data-toggle="modal" data-target="#m-m-u" >Postuler</button>
                {% endif %}
            {% endif %}   
            <a href="{{ path('eco_job_anonymous_offre_integralite',{ 'id': offre.id,'localisation': offre.localisation }) }}" target="_blank" class="btn-default btn1">Voir</a>
        {% endif %}
    </div>

</div>
<div id="m-m-u" class="modal fade" data-backdrop="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Postuler pour l'offre : {{ offre.titre }}</h4>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="form-group row">
                    <div class="col-lg-10">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        {{ form_row(form.joinMyCv) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-10">
                        <label class="checkbox-inline"><input type="checkbox" name="externalFile" id="externalFile"
                                                              checked="checked">Joindre un fichier externe</label>
                        {{ form_row(form.cvFile) }}
                    </div>
                </div>
                {% if app.user and app.user.curriculum.showable %}
                    <input type="submit" class="btn-default btn1" value="Envoyer ma candidature">
                {% else %}
                    <div class="alert alert-warning">
                        Vous n'avez pas encore fini de remplir votre <a href="{{ path('eco_job_candidat_gerercv') }}">CV</a> , veuillez le remplir avant d'Envoyer votre candidature.
                    </div>
                {% endif %}
                <div class="alert alert-dismissable" id="responseStore">
                </div>
            </div>
        </div>
    </div>
</div>
